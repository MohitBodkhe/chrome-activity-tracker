{
  "manifest_version": 3,
  "name": "Active Tab Time Tracker (Local)",
  "version": "1.0",
  "description": "Tracks active tab / domain time locally, shows dashboard in popup.",
  "permissions": [
    "tabs",
    "storage",
    "idle",
    "activeTab",
    "scripting",
    "windows",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Dashboard"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
